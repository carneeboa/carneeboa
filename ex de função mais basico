#include <stdio.h>
    
int main ()
{
    int n1, n2, soma;
    printf("digite os numeros pra somar: \n");
    scanf ("%i", &n1);
    scanf ("%i", &n2);
    soma = somar(n1, n2);
    printf ("o resultado Ã©: %i \n", soma);
