#include <stdio.h>

int contarOcorrencias(int vetor[], int tamanho, int numero) {
    int contador = 0;
    for (int i = 0; i < tamanho; i++) {
        if (vetor[i] == numero) {
            contador++;
        }
    }
    return contador;
}

int main() {
    int tamanho;
    printf("Digite o tamanho da sequência de números: ");
    scanf("%d", &tamanho);

    int vetor[tamanho];
    
    printf("Digite os números da sequência:\n");
    for (int i = 0; i < tamanho; i++) {
        scanf("%d", &vetor[i]);
    }

    int ultimoNumero = vetor[tamanho - 1]; // Último número da sequência
    int totalOcorrencias = contarOcorrencias(vetor, tamanho, ultimoNumero);

    printf("O último número lido é: %d\n", ultimoNumero);
    printf("Total de ocorrências do último número: %d\n", totalOcorrencias);

    return 0;
}






#include <stdio.h>

int main() {
    int n;

    
    printf("Digite o tamanho do vetor: ");
    scanf("%d", &n);

    int vetor[n];

    
    printf("Digite os elementos do vetor:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &vetor[i]);
    }

    
    printf("Vetor na ordem inversa:\n");
    for (int i = n - 1; i >= 0; i--) {
        printf("%d ", vetor[i]);
    }
    printf("\n");

    return 0;
}






#include <stdio.h>

int main() {
    int numeros[50];
    int par[50], impar[50]; // Vetores para armazenar pares e ímpares
    int qtdPar = 0, qtdImpar = 0;

    printf("Digite 50 números inteiros:\n");
    for (int i = 0; i < 50; i++) {
        scanf("%d", &numeros[i]);
        
        if (numeros[i] % 2 == 0) {
            par[qtdPar] = numeros[i];
            qtdPar++;
        } else {
            impar[qtdImpar] = numeros[i];
            qtdImpar++;
        }
    }

    printf("\nNúmeros pares:\n");
    for (int i = 0; i < qtdPar; i++) {
        printf("%d ", par[i]);
    }

    printf("\nNúmeros ímpares:\n");
    for (int i = 0; i < qtdImpar; i++) {
        printf("%d ", impar[i]);
    }

    printf("\n");

    return 0;
}





#include <stdio.h>

int main() {
    int numeros[21];
    int ultimoNumero;
    int presente = 0;

    
    printf("Digite 21 números inteiros:\n");
    for (int i = 0; i < 21; i++) {
        scanf("%d", &numeros[i]);
    }

    ultimoNumero = numeros[20]; // Último número da sequência

    
    printf("\nPosições onde o último número (%d) está presente:\n", ultimoNumero);
    for (int i = 0; i < 20; i++) {
        if (numeros[i] == ultimoNumero) {
            printf("%d ", i);
            presente = 1;
        }
    }

    if (!presente) {
        printf("O último número não está presente nos 20 primeiros números.");
    }

    printf("\n");

    return 0;
}

